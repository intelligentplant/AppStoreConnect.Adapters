<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>$(PackagePrefix).Adapter.Templates</PackageId>
    <PackageType>Template</PackageType>
    <DefaultNetCoreTargetFramework>net6.0</DefaultNetCoreTargetFramework>
    <Title>App Store Connect Adapter Templates</Title>
    <Description>Templates to use when creating an adapter for Intelligent Plant App Store Connect.</Description>
    <PackageTags>$(PackageTags);dotnet-new;templates</PackageTags>
    <IncludeDevelopmentPackages>false</IncludeDevelopmentPackages>
    <DeterministicSourcePaths>false</DeterministicSourcePaths>
    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="**\*" />
    <Content Include="templates\**\*" />
  </ItemGroup>

  <ItemGroup>
    <HostedAdapterTemplateFiles Include="..\..\examples\ExampleHostedAdapter\**\*" Exclude="..\..\examples\ExampleHostedAdapter\ExampleHostedAdapter.csproj;..\..\examples\ExampleHostedAdapter\Directory.Build.props;..\..\examples\ExampleHostedAdapter\README*.md;..\..\examples\ExampleHostedAdapter\**\bin\**;..\..\examples\ExampleHostedAdapter\**\obj\**" />
  </ItemGroup>
    
  <Target Name="CopyAscHostedAdapterTemplateFiles" BeforeTargets="Build">
    <Copy SkipUnchangedFiles="false" SourceFiles="@(HostedAdapterTemplateFiles)" DestinationFiles="@(HostedAdapterTemplateFiles->'templates\aschostedadapter\%(RecursiveDir)%(Filename)%(Extension)')" />
    <Copy SkipUnchangedFiles="false" SourceFiles="..\..\examples\ExampleHostedAdapter\README_TEMPLATE.md" DestinationFiles="templates\aschostedadapter\README.md" />
  </Target>
  
  <Target Name="ReplacePackageVersions" BeforeTargets="Build">
    <ReplaceFileText 
      InputFilename="..\..\examples\ExampleHostedAdapter\ExampleHostedAdapter.csproj" 
      OutputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj" 
      Placeholder="&lt;ProjectReference Include=&quot;..\..\src\DataCore.Adapter\DataCore.Adapter.csproj&quot; /&gt;" 
      Replacement="&lt;PackageReference Include=&quot;IntelligentPlant.AppStoreConnect.Adapter&quot; Version=&quot;$(Version)&quot; /&gt;" 
    />
    <ReplaceFileText
      InputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      OutputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      Placeholder="&lt;ProjectReference Include=&quot;..\..\src\DataCore.Adapter.AspNetCore.Grpc\DataCore.Adapter.AspNetCore.Grpc.csproj&quot; /&gt;"
      Replacement="&lt;PackageReference Include=&quot;IntelligentPlant.AppStoreConnect.Adapter.AspNetCore.Grpc&quot; Version=&quot;$(Version)&quot; /&gt;"
    />
    <ReplaceFileText
      InputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      OutputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      Placeholder="&lt;ProjectReference Include=&quot;..\..\src\DataCore.Adapter.AspNetCore.HealthChecks\DataCore.Adapter.AspNetCore.HealthChecks.csproj&quot; /&gt;"
      Replacement="&lt;PackageReference Include=&quot;IntelligentPlant.AppStoreConnect.Adapter.AspNetCore.HealthChecks&quot; Version=&quot;$(Version)&quot; /&gt;"
    />
    <ReplaceFileText
      InputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      OutputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      Placeholder="&lt;ProjectReference Include=&quot;..\..\src\DataCore.Adapter.AspNetCore.Mvc\DataCore.Adapter.AspNetCore.Mvc.csproj&quot; /&gt;"
      Replacement="&lt;PackageReference Include=&quot;IntelligentPlant.AppStoreConnect.Adapter.AspNetCore.Mvc&quot; Version=&quot;$(Version)&quot; /&gt;"
    />
    <ReplaceFileText
      InputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      OutputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      Placeholder="&lt;ProjectReference Include=&quot;..\..\src\DataCore.Adapter.AspNetCore.SignalR\DataCore.Adapter.AspNetCore.SignalR.csproj&quot; /&gt;"
      Replacement="&lt;PackageReference Include=&quot;IntelligentPlant.AppStoreConnect.Adapter.AspNetCore.SignalR&quot; Version=&quot;$(Version)&quot; /&gt;"
    />
    <ReplaceFileText
      InputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      OutputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      Placeholder="&lt;ProjectReference Include=&quot;..\..\src\DataCore.Adapter.KeyValueStore.Sqlite\DataCore.Adapter.KeyValueStore.Sqlite.csproj&quot; /&gt;"
      Replacement="&lt;PackageReference Include=&quot;IntelligentPlant.AppStoreConnect.Adapter.KeyValueStore.Sqlite&quot; Version=&quot;$(Version)&quot; /&gt;"
    />
    <ReplaceFileText
      InputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      OutputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      Placeholder="&lt;ProjectReference Include=&quot;..\..\src\DataCore.Adapter.OpenTelemetry\DataCore.Adapter.OpenTelemetry.csproj&quot; /&gt;"
      Replacement="&lt;PackageReference Include=&quot;IntelligentPlant.AppStoreConnect.Adapter.OpenTelemetry&quot; Version=&quot;$(Version)&quot; /&gt;"
    />

    <ReplaceFileText
      InputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      OutputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      Placeholder="Include=&quot;OpenTelemetry&quot;"
      Replacement="Include=&quot;OpenTelemetry&quot; Version=&quot;$(PkgVersion_OpenTelemetry)&quot;"
    />
    <ReplaceFileText
      InputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      OutputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      Placeholder="Include=&quot;OpenTelemetry.Api&quot;"
      Replacement="Include=&quot;OpenTelemetry.Api&quot; Version=&quot;$(PkgVersion_OpenTelemetry_Api)&quot;"
    />
    <ReplaceFileText
      InputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      OutputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      Placeholder="Include=&quot;OpenTelemetry.Exporter.Console&quot;"
      Replacement="Include=&quot;OpenTelemetry.Exporter.Console&quot; Version=&quot;$(PkgVersion_OpenTelemetry_Exporter_Console)&quot;"
    />
    <ReplaceFileText
      InputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      OutputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      Placeholder="Include=&quot;OpenTelemetry.Exporter.Jaeger&quot;"
      Replacement="Include=&quot;OpenTelemetry.Exporter.Jaeger&quot; Version=&quot;$(PkgVersion_OpenTelemetry_Exporter_Jaeger)&quot;"
    />
    <ReplaceFileText
      InputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      OutputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      Placeholder="Include=&quot;OpenTelemetry.Extensions.Hosting&quot;"
      Replacement="Include=&quot;OpenTelemetry.Extensions.Hosting&quot; Version=&quot;$(PkgVersion_OpenTelemetry_Extensions_Hosting)&quot;"
    />
    <ReplaceFileText
      InputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      OutputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      Placeholder="Include=&quot;OpenTelemetry.Instrumentation.AspNetCore&quot;"
      Replacement="Include=&quot;OpenTelemetry.Instrumentation.AspNetCore&quot; Version=&quot;$(PkgVersion_OpenTelemetry_Instrumentation_AspNetCore)&quot;"
    />
    <ReplaceFileText
      InputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      OutputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      Placeholder="Include=&quot;OpenTelemetry.Instrumentation.Http&quot;"
      Replacement="Include=&quot;OpenTelemetry.Instrumentation.Http&quot; Version=&quot;$(PkgVersion_OpenTelemetry_Instrumentation_Http)&quot;"
    />
    <ReplaceFileText
      InputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      OutputFilename="templates\aschostedadapter\ExampleHostedAdapter.csproj"
      Placeholder="Include=&quot;OpenTelemetry.Instrumentation.SqlClient&quot;"
      Replacement="Include=&quot;OpenTelemetry.Instrumentation.SqlClient&quot; Version=&quot;$(PkgVersion_OpenTelemetry_Instrumentation_SqlClient)&quot;"
    />
  </Target>

  <UsingTask TaskName="ReplaceFileText" TaskFactory="RoslynCodeTaskFactory" AssemblyFile="$(MSBuildToolsPath)\Microsoft.Build.Tasks.Core.dll">
    <ParameterGroup>
      <InputFileName ParameterType="System.String" Required="true" />
      <OutputFileName ParameterType="System.String" Required="true" />
      <Placeholder ParameterType="System.String" Required="true" />
      <Replacement ParameterType="System.String" Required="true" />
    </ParameterGroup>
    <Task>
      <Using Namespace="System" />
      <Using Namespace="System.IO" />
      <Code Type="Fragment" Language="cs">
        <![CDATA[  
          File.WriteAllText(
            OutputFileName,
            File.ReadAllText(InputFileName).Replace(Placeholder, Replacement)
          );
        ]]>
      </Code>
    </Task>
  </UsingTask>

</Project>
